{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build/tsc",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
  ],
  "exclude": [
      "node_modules"
  ],
  "files": [
    "type-declarations/globals.d.ts"
  ]
}
